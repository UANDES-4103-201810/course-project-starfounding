<p id="notice"><%= notice %></p>

<h1 style="color: white">Wish List</h1>

<table style="color: white">
  <thead>
    <tr>
      <th>Product</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <div style="color: white">
    <%= image_tag "project.jpg", :alt => "project", :size => "98x120" %>
    <label>User</label>
    <label>Category</label>
    <label>Title</label>
    <label>Description</label>
    <li><%= link_to "Go", method: :get %></li>
  </div>
    <% @wish_lists.each do |wish_list| %>
      <tr>
        <td><%= wish_list.product %></td>
        <td><%= wish_list.user %></td>
        <td><%= link_to 'Show', wish_list %></td>
        <td><%= link_to 'Edit', edit_wish_list_path(wish_list) %></td>
        <td><%= link_to 'Destroy', wish_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wish List', new_wish_list_path %>
