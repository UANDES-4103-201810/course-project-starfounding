<p id="notice"><%= notice %></p>
<div class="panel panel-default devise-bs" xmlns:font-size="http://www.w3.org/1999/xhtml">
  <div class="panel-heading">
    <h1 align="center"> Categories</h1>
    <p align="right">
      <%= link_to 'New Category', new_category_path , method: :get if current_user.present? and current_user.isAdmin?%>
    </p>
  </div>
</div>


<% @categories.each do |category| %>
  <div class="col-md-3">
    <div class="panel panel-default devise-bs" xmlns:font-size="http://www.w3.org/1999/xhtml">
      <div class="panel-heading">
        <a href="<%= category_url(category) %>">
          <h3><%= category.name %></h3></a>
      </div>

    </div>
  </div>
<% end %>

