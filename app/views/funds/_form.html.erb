<%= form_with(model: @project_fund, local: true) do |form| %>

  <div class="field">

  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>

  <%= form.hidden_field :user, :value => current_user.id %>
  <%= form.hidden_field :project, :value => @project.id%>

<% end %>